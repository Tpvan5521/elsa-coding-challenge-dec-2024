{
  "compilerOptions": {
    "outDir": "build",
    "module": "ES2022",
    "target": "es5",
    "lib": ["es6", "dom"],
    "sourceMap": true,
    "allowJs": true,
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "rootDir": "src",
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "baseUrl": "src",
    "paths": {
      "*": ["*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "src",
    "build/types/**/*.ts",
    "database.rules.json",
    "env.d.ts",
    "custom.d.ts"
  ],
  "exclude": [
    "node_modules",
    "build",
    "scripts",
    "acceptance-tests",
    "webpack.config.js",
    "jest",
    "src/setupTests.ts",
    "eslint.config.mjs",
    "webpack.config.js"
  ],
  "types": ["typePatches"]
}
